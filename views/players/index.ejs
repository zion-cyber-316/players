<%if(msg && msg.length){ %>
<div class="row  row-cols-lg-2 offset-3  row-cols-md-2   row-cols-sm-1 alert-dismissible fade show">
  <div class="alert alert-success" role="alert">
<%= msg  %>
<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<%} %>

</div>


<div class="row  row-cols-lg-3  row-cols-md-2   row-cols-sm-1">

  <%for( data of playerData ){%>
<a href="/players/<%= data._id %>" class="link">

  <div class="card" >
  <img src="<%= data.image.url %>" class="card-img-top" alt="players" style="height:  20rem">
  <div class="card-body">
    <h3><%= data.playerName %></h3>
  <ul>
    <li> Matches :<%= data.matches %></li>
    <li> Runs : <%= data.runs %></li>
 
  </ul>
  </div>
</div>
</a>

<%}%>


</div>





















